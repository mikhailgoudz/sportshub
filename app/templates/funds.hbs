
<div class="mx-auto col-md-5 mt-5">
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h3 class="panel-title ">Add Funds</h3>
        </div>
        <div class="panel-body">
            <form role="form">
                   <div class="form-group">
                        <label for="cardNumber">AMOUNT</label>
                        <div class="input-group">
                            <input type="number" min="0" class="form-control text-center" id="cardNumber" placeholder="0.00"required autofocus/>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        </div>
                  </div>
                <div class="form-group">
                    <label for="cardNumber">CARD NUMBER</label>
                    <div class="input-group">
                        <input type="text" class="form-control text-center" minlength="15" maxlength="16" id="cardNumber" placeholder="Valid Card Number"required autofocus/>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    </div>
                </div>
                

                <div class="data-container">
                        <div class="form-group w-25">
                            <label for="expDate">EXPIRATION DATE</label>
                            <div class="exp-date pl-zero">
                                <input type="number" min ="1" max="12" class="form-control" id="expityMonth" placeholder="MM" required />
                            </div>
                            <div class="exp-date pl-zero">
                                <input type="number" min="2019" max="2025" class="form-control" id="expityYear" placeholder="YY" required />
                            </div>
                        </div>
                    
                        <div class="form-group w-25 float-right">
                            <label for="cvCode"> CVV</label>
                            <input type="number" min="000" max="9999" class="form-control" id="cvvCode" placeholder="CVV" required />
                        </div>
                </div>
            </form>
        </div>
    </div>
    <br/>
    <button class="btn btn-success btn-lg btn-block" role="button">Deposit </button>
</div>
  