<ol>
    <h2>Bet slips</h2>
    {{#each model as |bet|}}
    {{!-- <li><b>{{bet.sport}}</b> {{bet.team}} {{bet.odds}}  {{bet.datePlaced}}</li> --}}
      <div class="card mt-5 mb-5" style="width: 23rem;">
      <h3 class="text-center">{{bet.sport}}</h3>
      <div class="card-body">
               
        <h4> Team: {{bet.team}} </h4>
        <h4>Line: {{bet.odds}}</h4>
        <h4>Wager: ${{bet.wager}}</h4>
        <h4>Potential Payout: ${{bet.payout}}</h4>
         <p>{{bet.datePlaced}}</p>
      </div>
    </div>
    {{/each}}
</ol>
