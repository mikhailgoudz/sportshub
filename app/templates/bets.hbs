
<div class="mt-5">
  <div class="container text-center">
    <h2>Bet Slips</h2>
  </div>
</div>

<div class="container">
<div class="row">
{{#each model as |bet|}}
<div class="col-4">
  <div class="card mt-5 mb-5" style="width: 23rem;">
      <h3 class="text-center">{{bet.sport}}</h3>
      <div class="card-body">
               
        <h4> Team: {{bet.team}} </h4>
        <h4>Odds:{{#if bet.positiveOdds}} +{{/if}}{{bet.odds}}</h4>
        <h5>Wager: ${{bet.wager}}</h5>
        <h5>Potential Payout: ${{bet.payout}}</h5>
         <p>{{bet.datePlaced}}</p>
      </div>
    </div>
    </div>

{{/each}}
</div>
</div>


