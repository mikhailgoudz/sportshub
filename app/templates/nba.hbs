
<ul>
  <h3>Games Today</h3>
  {{#each this.model as |game|}}
  {{#if game.Status}}
      <li> <b>{{game.Home}} </b>- <b> {{game.Away}} </b>                                                         <button {{action "moneyline" game.HomeTeamMoneyLine game.Home}}>{{game.Home}} {{game.HomeTeamMoneyLine}}</button> 
      <button {{action "moneyline" game.AwayTeamMoneyLine game.Away}}>{{game.Away}} {{game.AwayTeamMoneyLine}}</button> </li>
      {{/if}}
  {{/each}}
</ul>

<ul>
  <h3>Completed Games</h3>
  {{#each this.model as |game|}}
  {{#if game.isFinal}}
      <li> <b>{{game.Home}} </b>- <b> {{game.Away}} </b>                                                         <button {{action "moneyline" game.HomeTeamMoneyLine game.Home}}>{{game.Home}} {{game.HomeTeamMoneyLine}}</button> 
      <button {{action "moneyline" game.AwayTeamMoneyLine game.Away}}>{{game.Away}} {{game.AwayTeamMoneyLine}}</button> </li>
      {{/if}}
  {{/each}}
</ul>



