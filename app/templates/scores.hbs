

<ul>
  <h3>Live Games</h3>
  {{#each this.model as |game|}}
    {{#if game.IsInProgress}}
      <li><b>{{game.Home}} </b>- <b>{{game.Away}}</b> - O/U: {{game.OverUnder}}</li>
      {{else}}
      
    {{/if}}
  {{/each}}
</ul>

<ul>
  <h3>Completed Games</h3>
  {{#each this.model as |game|}}
   {{#if game.IsOver}}
      <li> <b>{{game.Home}} </b> {{game.HomeScore}} - <b> {{game.Away}}</b> {{game.AwayScore}}</li>
    {{/if}}
  {{/each}}
</ul>


<ul>
  <h3>Up Coming</h3>
  {{#each this.model as |game|}}
   {{#unless game.IsOver}}
      <li> <b>{{game.Home}} </b> {{game.HomeScore}} - <b> {{game.Away}}</b> {{game.AwayScore}}     <button  {{action "moneyline" game.HomeTeamMoneyLine game.Home}}>{{game.Home}}                      {{game.HomeTeamMoneyLine}}</button> 
     <button {{action "moneyline" game.AwayTeamMoneyLine game.Away}}>{{game.Away}}                        {{game.AwayTeamMoneyLine}}</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>


