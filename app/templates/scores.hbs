<div class="container mx-auto">
    <div class="row">
      <div class="col-4 text-center">
      <ul>
        <h3>Live Games</h3>
        <br>
        {{#each this.model as |game|}}
          {{#if game.IsInProgress}}
          
            <li> <img src={{game.HomeLogo}} alt="" height = "30" width="35"> <b>{{game.Home}}</b> {{game.HomeScore}} - <b>{{game.Away}}</b> {{game.AwayScore}} <img src={{game.AwayLogo}} alt="" height = "30" width="35">  </li>
            {{else}}
            
          {{/if}}
          
        {{/each}}
      </ul>
      </div>

      <div class="col-4 text-center">
      <ul>
        <h3>Completed Games</h3>
        <br>
        {{#each this.model as |game|}}
        {{#if game.IsOver}}
        <div class="scoreboard">
            <li> 
                <div class="mx-auto details">
                  <img src={{game.HomeLogo}} class="ml-4"  alt="" height = "30" width="35">
                  <span class="home-team ">{{game.Home}}</span> 
                  <img src={{game.AwayLogo}}  class="ml-5" alt="" height = "30" width="35">
                  <span class="away-team">{{game.Away}}</span>
                </div>
                  <span class="home-score float-left">{{game.HomeScore}}</span>
                  <span class="away-score float-right">{{game.AwayScore}}</span> 
              </li>
            </div>
            <br>
          {{/if}}

        {{/each}}
      </ul>

      </div>

      <div class="col-4 text-center">

      <ul>
        <h3>Up Coming Games</h3>
        <br>
        {{#each this.model as |game|}}
        {{#unless game.IsOver}}
        {{#unless game.IsInProgress}}
            <li> <b>{{game.Home}} </b>- <b> {{game.Away}}</b> <button  {{action "moneyline" game.HomeTeamMoneyLine game.Home}}>{{game.Home}} {{#if game.positiveHomeOdds}}+{{/if}}{{game.HomeTeamMoneyLine}}</button> 
          <button {{action "moneyline" game.AwayTeamMoneyLine game.Away}}>{{game.Away}} {{#if game.positiveAwayOdds}}+{{/if}}{{game.AwayTeamMoneyLine}}</button>
            <img src={{game.HomeLogo}} alt="" height = "30" width="35">
            </li>
            {{/unless}}
          {{/unless}}
        {{/each}}
      </ul>
      </div>


 </div>



{{#if this.clicked}}
<BsModal @onSubmit={{action "placeBet" this.wager}} @onHide={{action "cancelBet"}} as |Modal|>
  <Modal.header>
    <h4 class="modal-title"><i class="glyphicon glyphicon-alert "></i> Place Bet</h4>
  </Modal.header>
  <Modal.body>
        <h6>Team: <img src={{this.picUrl}} alt="" height = "400" width="470" >{{this.team}}</h6>
        <h6>Line: {{this.symbol}}{{this.line}}</h6>
      {{input type="number" id="cardNumber" min="0.00"  step="1.00" class="form-control text-center" value=wager  placeholder="0.00" required=required}}
  </Modal.body>
  <Modal.footer as |footer|>
    <BsButton @onClick={{action Modal.close}} @type="danger">Cancel Bet</BsButton>
    <BsButton @onClick={{action Modal.submit}} @type="success">Place Bet</BsButton>
  </Modal.footer>
</BsModal>
{{/if}}




{{outlet}}

</div>

